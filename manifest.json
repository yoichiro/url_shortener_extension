{
    "name": "goo.gl URL Shortener extension",
    "description": "This extension provides you the UI to use Google URL Shortener quickly.",
    "version": "1.3.1",
    "browser_action": {
        "default_icon": "./url_shortener_extension_19.png",
        "default_title": "URL Shortener",
        "popup": "./popup.html"
    },
    "permissions": [
        "tabs",
        "notifications",
        "contextMenus",
        "https://www.googleapis.com/"
    ],
    "icons": {
        "16": "./url_shortener_extension_16.png",
        "48": "./url_shortener_extension_48.png",
        "128": "./url_shortener_extension_128.png"
    },
    "background_page": "./background.html"
}
